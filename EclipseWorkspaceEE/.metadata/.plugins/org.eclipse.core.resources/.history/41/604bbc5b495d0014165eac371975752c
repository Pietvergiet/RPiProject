package Gpio;

import com.pi4j.io.gpio.GpioController;
import com.pi4j.io.gpio.GpioFactory;
import com.pi4j.io.gpio.GpioPinDigitalOutput;
import com.pi4j.io.gpio.PinPullResistance;
import com.pi4j.io.gpio.PinState;
import com.pi4j.io.gpio.RaspiPin;

public class Init {
	
	public Init() {
		GpioController gpio = GpioFactory.getInstance();
		GpioPinDigitalOutput GPIO00 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_00, "J5/3-IO17", PinState.LOW);
		GpioPinDigitalOutput GPIO01 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_01, "J5/4-IO18", PinState.LOW);
		GpioPinDigitalOutput GPIO02 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_02, "J5/5-IO27", PinState.LOW);
		GpioPinDigitalOutput GPIO03 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_03, "J5/6-IO22", PinState.LOW);
		GpioPinDigitalOutput GPIO04 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_04, "J5/7-IO23", PinState.LOW);
		GpioPinDigitalOutput GPIO05 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_05, "J5/8-IO24", PinState.LOW);
		GpioPinDigitalOutput GPIO06 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_06, "J5/9-IO25", PinState.LOW);
		GpioPinDigitalOutput GPIO07 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_07, "J4/7-RXD0", PinState.LOW);
		GpioPinDigitalOutput GPIO08 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_08, "J10/3-IO28", PinState.LOW);
		GpioPinDigitalOutput GPIO09 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_09, "J10/4-IO29", PinState.LOW);
		GpioPinDigitalOutput GPIO10 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_10, "J10/5-IO30", PinState.LOW);	
		GpioPinDigitalOutput GPIO11 = gpio.provisionDigitalOutputPin(RaspiPin.GPIO_11, "J10/6-IO31", PinState.LOW);	
		GPIO00.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO01.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO02.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO03.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO04.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO05.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO06.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO07.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO08.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO09.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO10.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
		GPIO11.setShutdownOptions(true, PinState.LOW, PinPullResistance.OFF);
	}

}
